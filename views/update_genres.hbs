            <fieldset>
                <h3>Selected Genre Details</h3>
                <div class="form-group">
                    <p>Genre (<a id="genre_id">{{this.genre_id}}</a>)</p>
                    <label for="gname">Name: </label> 
                    <input id="gname" type="text" class="form-control" name="genre_name" value="{{this.genre_name}}">

                </div>
            </fieldset>
            <br>
                <div>
                    <input onclick= "window.location.href='/genres';" class="btn" type="submit" value="Update genre">
                    <a href="/genres"><input class="btn" type="button" value="Cancel"></a>
                </div>
        <!-- update -->
        {{/each}}
        </form>
        </div>
    <script src="/js/update_genre.js"></script>

