
<html>
    <head>
        <title>Orders Has Albums</title>
        
        <!-- Link CSS and JS files -->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    </head>

    <body class="first-color">
        <h1 class="title-format">Orders Has Albums</h1>
        
        <div class="text-font">
            [ <a href="../orders">Orders</a> | <a href="../customers">Customers</a> | <a href="../artists">Artists</a> | <a href="../albums">Albums</a> | <a href="../genres">Genres</a>
            | <a href="../artists_has_albums">Artists Has Albums</a> | <a href="../genres_has_albums">Genres Has Albums</a>  | <a href="../orders_has_albums">Orders Has Albums</a> ]
        
            <p><a href="../">Return to Index Page</a></p>
        </div>

        <div id="browse_orders_has_albums">

            <table id="orders-albums-table" border="1" cellpadding="5">
                
                <thead>
                    <tr>
                        <th>
                            <div class="aligner">
                                <a href="../insert_orders_has_albums"><i class="material-icons button add_circle">add_circle</i></a>
                            </div>
                        </th>

                        <th class="text-font-headers">Delete</th>
                        {{#each data.[0]}}
                        <th class="text-font-headers">
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>
                
                <tbody>
                    {{#each data}}
                    <tr class="text-font" data-value={{this.[Orders_Albums_ID]}}>
                        <td><a href="../update_orders/{{this.[Orders_Albums_ID]}}"><i class="material-icons button edit">edit</i></a></td>
                        <td><a href="#" onclick="deleteOrdersHasAlbums({{this.[Orders_Albums_ID]}})"><i class="material-icons button delete">delete</i></a></td>                       
                        <td>{{this.[Orders_Albums_ID]}}</td>
                        <td>{{this.[Order ID]}}</td>
                        <td>{{this.[Album ID]}}</td>
                        <td>{{this.[Quantity]}}</td>
                        <td>{{this.[Line Total]}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="/js/delete_orders_has_albums.js"></script>
            <p>&nbsp;</p>
        </div>

        <!--seach function display the albums belong to the artist-->
        <div class="text-font">
            <h3>Display all albums purchased in an order</h3>

            <form class="searchAlbums">
                <input type="text" placeholder="Please enter an order ID..." name="search">
                <input class="btn" type="submit" id="searchAlbums" value="Search">
                <a href='/albums'><button>Reset</button></a>
            </form>
        </div>

    </body>
</html>