
<html>
    <head>
        <title>Artists</title>
        
        <link href="/css/style.css"  rel="stylesheet" type="text/css" />

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    </head>

    <body onload="browseArtist()">
        <h1>Artists</h1>

        [ <a href="../orders">Orders</a> | <a href="../customers">Customers</a> | <a href="../artists">Artists</a> | <a href="../albums">Albums</a> | <a href="../genres">Genres</a>
        | <a href="../artists_has_albums">Artists Has Albums</a> | <a href="../genres_has_albums">Genres Has Albums</a>  | <a href="../orders_has_albums">Orders Has Albums</a> ]
        
        <p><a href="../">Return to Index Page</a></p>

        <br>
        
        <div id="browse">
             <table border="1" cellpadding="5" id="artists-table">

                <thead>
                    <tr>
                        <th><a href="../insert_artists" onClick="newArtist()">New</a></th>
                        <th>Delete</th>
                            {{#each data.[0]}}
                            <th>
                                {{@key}}
                            </th>
                            {{/each}}
                    </tr>
                </thead>

                <tbody>

                    {{!-- For each row, print the id, name and country in order --}}
                    {{#each data}}
                    <tr data-value={{this.[Artist ID]}}>
                        <td><a href="../update_artists/{{this.[Artist ID]}}" class="btn btn-outline-danger btn-md">Edit</a></td>
                        <td><button onclick="deleteArtist({{this.[Artist ID]}})">Delete</button></td>                       
                        <td align="center">{{this.[Artist ID]}}</td>
                        <td align="center">{{this.[Artist Name]}}</td>
                        <td align="center">{{this.[Country]}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="/js/delete_artist.js"></script>

            <p>&nbsp;</p>
        </div> <!-- browse -->

        <!--seach function display the artist information by searching artist name-->
        <div>
            <h3>Search artist information by artist name</h3>

            <form id="search-artist-html" method='GET' action='/artists'>
                <label for="input-arname">Search by Name: </label>
                <input type="text" name="arname" id="input-arname-html-search">
                
                <input type="submit">
                <a href='/artists'><button>Reset</button></a>
            </form>
        </div><!-- search-->

    </body>
</html>
