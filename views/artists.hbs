
<html>
    <head>
        <title>Artists</title>
        
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    </head>

    <body class="first-color">
        <h1 class="title-format">Artists</h1>

        <div class="text-font">
            [ <a href="../orders">Orders</a> | <a href="../customers">Customers</a> | <a href="../artists">Artists</a> | <a href="../albums">Albums</a> | <a href="../genres">Genres</a>
            | <a href="../artists_has_albums">Artists Has Albums</a> | <a href="../genres_has_albums">Genres Has Albums</a>  | <a href="../orders_has_albums">Orders Has Albums</a> ]
            
            <p><a href="../">Return to Index Page</a></p>
        </div>
        
        <div id="browse">
             <table border="1" cellpadding="5" id="artists-table">

                <thead>
                    <tr>
                        <th>
                            <div class="aligner">
                                <a href="../insert_artists"><i class="material-icons button add_circle">add_circle</i></a>
                            </div>
                        </th>

                        <th class="text-font-headers">Delete</th>
                            {{#each data.[0]}}
                            <th class="text-font-headers">
                                {{@key}}
                            </th>
                            {{/each}}
                    </tr>
                </thead>

                <tbody>

                    {{!-- For each row, print the id, name and country in order --}}
                    {{#each data}}
                    <tr class="text-font" data-value={{this.[Artist ID]}}>
                        <td><a href="../update_artists/{{this.[Artist ID]}}"><i class="material-icons button edit">edit</i></a></td>
                        <td><a href="#" onclick="deleteArtist({{this.[Artist ID]}})"><i class="material-icons button delete">delete</i></a></td>                       
                        <td align="center">{{this.[Artist ID]}}</td>
                        <td align="center">{{this.[Artist Name]}}</td>
                        <td align="center">{{this.[Country]}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="/js/delete_artist.js"></script>

            <p>&nbsp;</p>
        </div> <!-- browse -->

        <!--seach function display the artist information by searching artist name-->
        <div class="text-font">
        
            <h3>Search artist information by artist ID</h3>
            <form id="search-person-html" method='GET' action='/artists'>
                <select name="input_artist" id="input-artist-ajax">
                    <option value="">Select an artist ID</option>
                    {{#each artist_ids}}
                    <option value="{{this.artist_id}}">{{this.artist_id}}</option>
                    {{/each}}
                </select>
                <input type="submit">
                <a href='/artists'><button>Reset</button></a>
            </form>
        </div><!-- search-->

    </body>
</html>
