        <div id="update_customers">
            <form method="POST" id="updateCustomer">
                <fieldset>
                    <h3>Selected Customer Details</h3>
                    <div class="form-group">
                        <label for="cid"> Customer ID: </label> 
                        <input type="number" name="cid" value="1"><br><br>
                        <label for="fname"> First Name: </label> 
                        <input type="text" name="fname" value="customer first name"><br><br>
                        <label for="lname"> Last Name: </label> 
                        <input type="text" name="lnamedate" value="customer last name"><br><br>
                        <label for="email"> Email: </label> 
                        <input type="email" name="email" value="customer email"><br><br>
                        <label for="phone"> Phone: </label> 
                        <input type="tel" name="phone" value="123-456-7890"><br><br>
                        <label for="address"> Address: </label> 
                        <input type="text" name="address" value="customer address"><br><br>
                    </div>
                </fieldset>
                <br>
                
                <input class="btn" type="submit" id="UpdateSaveCustomer" value="Update Customer">
                <a href="../customers"><input class="btn" type="button" value="Cancel"></a>
            </form> 
        </div><!-- update -->

    </body>
