<html>
    <head>
        <title>Orders</title>

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    
    </head>

    <body class="first-color">
        <h1 class="title-format">Orders</h1>

        <div class="text-font">
            [ <a href="../orders">Orders</a> | <a href="../customers">Customers</a> | <a href="../artists">Artists</a> | <a href="../albums">Albums</a> | <a href="../genres">Genres</a>
            | <a href="../artists_has_albums">Artists Has Albums</a> | <a href="../genres_has_albums">Genres Has Albums</a>  | <a href="../orders_has_albums">Orders Has Albums</a> ]
            
            <p><a href="../">Return to Index Page</a></p>
        </div>

        <div id="browse">

            <table id="orders-table" border="1" cellpadding="5">
                    
                <thead>
                    <tr>
                        <th>
                            <div class="aligner">
                                <a href="../insert_orders"><i class="material-icons button add_circle">add_circle</i></a>
                            </div>  
                        </th>

                        <th class="text-font-headers">Delete</th>
                        {{#each data.[0]}}
                        <th class="text-font-headers">
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>
                
                <tbody>
                    {{#each data}}
                    <tr class="text-font">
                        <td><a href="../update_orders/{{this.[Order ID]}}"><i class="material-icons button edit">edit</i></a></td>
                        <td><a href="#" onclick="deleteOrder({{this.[Order ID]}})"><i class="material-icons button delete">delete</i></a></td>
                        <td>{{this.[Order ID]}}</td>
                        <td>{{this.[Order Date]}}</td>
                        <td>{{this.[Order Total]}}</td>
                        <td>{{this.[Customer ID]}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <script src="/js/delete_order.js"></script>

            <p>&nbsp;</p>
        </div> <!-- browse -->

        <!--seach function display the order information by searching customer ID-->
        <div class="text-font">
            <h2>Search Using an HTML Form</h2>
            <p>Search orders by customer ID using the field below.</p>
            <form id="search-order-html" method='GET' action='/orders'>
                <label for="input-customer_id">Customer ID: </label>
                <select name="custo_id" id="input-customer_id-ajax">
                    <option value="">Select a Customer ID</option>
                    {{#each customer_ids}}
                    <option value="{{this.customer_id}}">{{this.customer_id}}</option>
                    {{/each}}
                </select>

                <input type="submit">
                <a href='/orders'><button>Reset</button></a>
            </form>
        </div><!-- search-->

        <p>&nbsp;</p>
    </body>
</html>
