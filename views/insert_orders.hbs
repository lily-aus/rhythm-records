<html>
    <head>
        <title>Add Orders</title>

         <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    
    </head>

    <body class="first-color">
        <h1 class="title-format">Add Orders</h1>

        <div class="text-font"> 
            [ <a href="../orders">Orders</a> | <a href="../customers">Customers</a> | <a href="../artists">Artists</a> | <a href="../albums">Albums</a> | <a href="../genres">Genres</a>
            | <a href="../artists_has_albums">Artists Has Albums</a> | <a href="../genres_has_albums">Genres Has Albums</a>  | <a href="../orders_has_albums">Orders Has Albums</a> ]
            
            <p><a href="../">Return to Index Page</a></p>
        </div>

        <br>

        <div class="text-font" id="add_orders">

            <form class="text-font" id="addOrder">
                <fieldset>
                    <h3>Provide Order Details</h3>
                    <div class="form-group">
                        <label for="customer_id"> Customer ID: </label> 
                        <select id="customerSelect">
                            <option value="test">Select a Customer ID</option>
                            {{#each data}}
                            <option value={{this.customer_id}} type="int" name="customer_id" id="cid">{{this.customer_id}}</option>
                            {{/each}}
                        </select>

                        <br><br>

                        <form class="text-font" id="addAlbum">
                            <fieldset>
                                <h3>Add Albums & Quantities</h3>
                                <select class="form-control" id="albumSelect">
                                    <option value="test">Select an Album</option>
                                    {{#each album}}
                                    <option album_id="{{this.album_id}}">{{this.album_name}}</option>
                                    {{/each}}
                                </select>

                                <select class="form-control" id="quanSelect">
                                    <option value="test">Select a Quantity</option>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                                
                                <button type="button" onclick="addMoreAlbum()">Add more albums</button>
                                
                                <br><br>
                                
                                <table id="addAlbum-table" border="1" cellpadding="5">
                                    <thead>
                                        <tr class="text-font-headers">
                                            <th>Album ID</th>
                                            <th>Album Name</th>
                                            <th>Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                    </tbody>
                                </table>
                            </fieldset>
                        </form>
                    </div>
                </fieldset>
            </form> 

            <form class="text-font" id="submitForm">
                <div>
                    <input onclick= "window.location.href='/orders';" class="btn" type="submit" value="Add order">
                    {{!-- onclick= "window.location.href='/orders';"  --}}
                    <a href="/orders"><input class="btn" type="button" value="Cancel"></a>
                </div>
            </form>

            <script src="/js/add_order.js"></script>
            
        </div>

    </body>
</html>
