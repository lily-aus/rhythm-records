<html>

    <head>
        <title>Add Albums</title>
        
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    </head>

    <body class="first-color">
        <h1 class="title-format">Add Album</h1>
        
        <div class="text-font">
            [ <a href="../orders">Orders</a> | <a href="../customers">Customers</a> | <a href="../artists">Artists</a> | <a href="../albums">Albums</a> | <a href="../genres">Genres</a>
            | <a href="../artists_has_albums">Artists Has Albums</a> | <a href="../genres_has_albums">Genres Has Albums</a>  | <a href="../orders_has_albums">Orders Has Albums</a> ]
            
            <p><a href="../">Return to Index Page</a></p>
        </div>

        <div class="text-font" id="add_albums">
            
            <form class="text-font" id="addAlbum">
                <fieldset>
                    <h3>Provide Album Details</h3>
                    <div class="form-group">
                        <label for="alname"> Album Name: </label> 
                        <input type="text" name="alname" id="alname"><br><br>
                        <label for="date"> Release Date: </label> 
                        <input type="date" name="date" id="date"><br><br>
                        <label for="quan"> Quantity in Stock: </label> 
                        <input type="number" min="1" step="1" name="qty" id="qty"><br><br>
                        <label for="price"> Price: </label> 
                        <input type="number" step="0.01" name="price" id="price"><br><br>
                    </div>
                </fieldset>
                <br>
            </form>

            <form class="text-font" id="addArtist">
                <fieldset>
                    <h3>Add Artists - (multiple artists allowed)</h3>
                    <select class="form-control" id="artistSelect">
                        {{#each data}}
                        <option artist_id="{{this.artist_id}}">{{this.artist_name}}</option>
                        {{/each}}
                    </select>
                    <button type="button" onclick="addMoreArtist()"> Add more artists</button>
                    <br>
                    <br>
                    <table id="addArtist-table" border="1" cellpadding="5">
                        <thead>
                            <tr class="text-font-headers">
                                <th>Artist ID</th>
                                <th>Artist Name</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </fieldset>
            </form>

            <form class="text-font" id="addGenre">
                <fieldset>
                    <h3>Add Genres - (multiple genres allowed)</h3>
                    <select class="form-control" id="genreSelect">
                        {{#each genre}}
                        <option genre_id="{{this.genre_id}}">{{this.genre_name}}</option>
                        {{/each}}
                    </select>
                    <button type="button" onclick="addMoreGenre()">Add more genre</button>
                    <br>
                    <br>
                    <table id="addGenre-table" border="1" cellpadding="5">
                        <thead>
                            <tr class="text-font-headers">
                                <th>Genre ID</th>
                                <th>Genre Name</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </fieldset>
                <br>
            </form>

            <form class="text-font" id="submitForm">
                <div>
                    <input onclick= "window.location.href='/albums';" class="btn" type="submit" value="Add album">
                    <a href="/albums"><input class="btn" type="button" value="Cancel"></a>
                </div>
            </form>
        
            <script src="/js/add_album.js"></script>

        </div><!-- insert -->

    </body>
</html>